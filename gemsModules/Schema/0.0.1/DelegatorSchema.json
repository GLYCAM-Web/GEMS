{
 "$schema": "http://json-schema.org/draft-07/schema#",

 "definitions" : {
    "Entity": {
      "type": "object",
      "description": "An Entity to be sent to the gemsModules Delegator",
      "properties":  {
        "type":      { 
                       "enum": [ "Delegator", "File", "GlycoProtein", "Sequence", "MDSimulation" ] 
                     },
        "name":      { 
                       "type": "string",
                       "description" : "User-Defined Name for this entity" 
                     },
        "Services":   { 
          "type":    "array",
          "items":   { "$ref": "#/definitions/Service" },
          "default": []
                     },
        "Options":   { 
          "type":    "array",
          "items":   { "$ref": "#/definitions/Option" },
          "default": []
                     },
        "EchoedPayload" : {
          "type" : "string",
          "description" : "Arbitrary text to be echoed back to the caller and out to certain log or other output files."
        }
      },
      "required": ["type"]
    },
    "Service": {
      "type": "object",
      "description": "An Service to be performed in association with an Entity",
      "properties":  {
        "name":      { 
                       "type": "string",
                       "description" : "The name of the Service to perform.  Each Entity type will have its own list."
                     },
        "Options":   { 
          "type":    "array",
          "items":   { "$ref": "#/definitions/Option" },
          "default": []
                     }
      },
      "required": ["name"]
    },
    "Option": {
      "type": "object",
      "description": "A list of options.  Allowed values will vary by Entity, Service, etc.",
      "properties":  {
        "OptionsList":   { 
          "type":    "array",
          "items":   { "type": "string" },
          "default": []
                     }
      }
    }
  } ,
  "$id": "https://github.com/GLYCAM-Web/gems/tree/gems-dev/gemsModules/Delegator/Schema/0.0.1/DelegatorSchema.json",
  "title": "gemsModulesDelegationPayload",
  "description": "A payload sent to the gemsModules Delegator",
  "type": "object",
  "properties": {
    "Entity":  { "$ref": "#/definitions/Entity" }
  },
  "required": [ "Entity" ]
 
}


